---
import BaseLayout from '../layouts/BaseLayout.astro';
import HorizontalCard from '../components/HorizontalCard.astro';
---

<BaseLayout title="Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Broadtime</div>
  </div>

  <HorizontalCard
    title="RSD MRKT"
    img="/RSD_final_whiteorange.webp"
    desc="E-commerce platform for selling vinyl records."
    url="https://rsdmrkt.com"
    tags={['React', 'Express', 'MongoDB']}
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Broadtime Email Service"
    img="/Broadtime_Marketing_Solutions_Logo.png"
    desc="Email service for rendering emails with dynamic content."
    url="#"
    tags={['React Email', 'Express', 'TypeScript', 'Terraform']}
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Peraton</div>
  </div>

  <HorizontalCard
    title="Space Systems"
    img="/space.png"
    desc="Large scale distributed system to support space missions."
    url="https://www.peraton.com/missions/space/"
    tags={['Docker', 'Kubernetes', 'Java']}
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Enterprise Webapp"
    img="/intelligence.png"
    desc="REST APIs and testing suite for a large ongoing project."
    url="https://www.peraton.com/missions/intelligence/"
    tags={['Java', 'Spring', 'Ansible']}
  />
</BaseLayout>
